<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/viewPostLayout"
    android:layout_alignParentBottom="true"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewPostTitle"
        android:textSize="30sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newPostLayout"
        android:background="#FFFFFF">

        <Button
            android:id="@+id/newMessageSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:layout_alignBaseline="@+id/newMessageContent"
            android:layout_alignBottom="@+id/newMessageContent"
            android:layout_alignParentEnd="true" />

        <EditText
            android:id="@+id/newMessageContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:hint="Enter a message" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:id="@+id/viewPostScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewPostScrollLayout"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

</LinearLayout>